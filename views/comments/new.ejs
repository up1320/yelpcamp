<%-include('../partials/header.ejs')%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %> </h1>
        <div style="width: 30%;margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments " method="POST">
                <div class="form-group">
                    <input  id="commentText" class="form-control" type="text" name="comment[text]" placeholder="Text">
                </div>
                <div>
                    <input type="form-control" type="text" name="comment[description]" placeholder="description">
                </div>
                
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        
    </div>
</div>  

<%-include('../partials/footer.ejs')%>